<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreens.MealPlanFragment">

    <include
        android:id="@+id/week_nav_plan"
        layout="@layout/week_nav" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Sunday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sunday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Monday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/monday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Tuesday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tuesday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Wednesday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wednesday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Thursday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/thursday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Friday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Saturday" />

        <include layout="@layout/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saturday_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>